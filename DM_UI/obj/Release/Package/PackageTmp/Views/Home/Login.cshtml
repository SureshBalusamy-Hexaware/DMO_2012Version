@model DM_UI.Models.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="Login-text">
    <h2>Member Sign in</h2>
</div>
<br />
<br />

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    //this  is for create form tag
    @Html.AntiForgeryToken()
    // this is for prevent CSRF attack

    <div class="loginContainer">

        @Html.ValidationSummary(true, "", new { @class = "error-msg" })
        <div class="loginBox" style="width: 100%;">
            <div class="loginContent">
                <div class="form-group w-icon">
                    <img src="~/images/login-img.jpg" alt="logo" style="height: 44px; position: absolute;">

                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control-login", @placeholder = "UserName" })
                    @Html.ValidationMessageFor(a => a.UserName)
                </div>
                <div class="form-group w-icon">
                    <img src="~/images/pwd-img.jpg" alt="logo" style="height: 44px; position: absolute; width: 45px">
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control-login", @placeholder = "Password" })
                    @Html.ValidationMessageFor(a => a.Password)
                </div>
                <div class="form-group" style="margin-bottom: 0px;">
                    <input type="submit" value="Sign in" class="signin-button">
                </div>
                <div class="form-group">                    
                    <div  style="padding-right: 0px; text-align: right; width: 100%;">
                        @Html.ActionLink("Forgot Password?", "Forgotpassword", "Home", new { @style = "color:#00ADEF;" })
                    </div>
                </div>
            </div>
        </div>
    </div>

}