<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Images/dmo_favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @*<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/redmond/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="http://www.ok-soft-gmbh.com/jqGrid/jquery.jqGrid-4.5.4/css/ui.jqgrid.css" />*@

    <link type="text/css" href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/multiple-select.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>
    <script src="~/Scripts/jquery.jqGrid.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
</head>
<body>
    <div class="home-container">
        <div class="home-header-login">
            <!-- Header start -->
            <div class="home-header-logo-login">
                <img src="~/Images/datamoder.png" alt="logo" style="height: 63px;" />
            </div>
            <div class="home-header-content">
                <span>
                    Enables transition from heterogeneous / legacy applications to a modern platform by using data management best practices, innovative tools and state-of-the-art technology
                </span>
            </div>
            <div class="home-header-user" style="@((Session["userid"] == null) ? "display:none;" : "display:block;")">
                @*<div class="home-header-user-details">
                    Welcome @(Convert.ToString(Session["userid"]))!
                </div>*@
                @*<div class="home-header-logout">
                    @Html.ActionLink("Logout", "Logout")
                </div>*@
            </div>
            <!-- Header end -->
        </div>
        <div class="content">
            <!-- Body start -->
            @RenderBody()
            <!-- Body end -->
        </div>
        <div class="home-footer-login">
            <!-- Footer start -->
            <div class="home-ft-img-login">
                <div class="home-footer-Text">
                    © copyright, 2016. Hexaware Technologies. All Rights Reserved.
                    <img src="~/Images/footer.jpg" alt="logo" style=" margin-left:800px;" />
                </div>
            </div>
            <!-- Footer end -->
        </div>

    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
