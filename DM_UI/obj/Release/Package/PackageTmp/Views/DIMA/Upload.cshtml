@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_LayoutDIMA.cshtml";
}

@using (Html.BeginForm("PostedFile", "DIMA", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="content-body" style="width:100%;">
        <div class="group">
            <div class="form-group width-per-100 fL">
                <div class="col-40">
                    <input type="file" name="file" />
                </div>

            </div>
            <div class="form-group width-per-100 fL">
                <div class="col-40">
                    @*<input type="checkbox" name="ClearDatabase" />*@
                    @Html.CheckBox("ClearDatabase")
                    <label class="control-label"> Clear Database </label>
                </div>
            </div>
            <div class="form-group width-per-100 fL">
                <input type="submit" class="form-button" id="btnSubmit" value="Submit" />
            </div>
        </div>
    </div>
}