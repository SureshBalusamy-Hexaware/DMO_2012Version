        $.ajax({
            type: "POST",
            data: JSON.stringify(ImportMetaDataEntity),
            url: "Api/ConfigMS/ImportPost",
            dataType: "json",
            contentType: "application/json",
            success: function (data) {
                alert("Import Meta Data completed successfully.");
            },
